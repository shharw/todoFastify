<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ToDoApp</title>
    <link rel="stylesheet" href="../css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="row">
        <div class="col-3 px-5 py-3">
            <a class="logo" href="/">.todoFastify</a>
            <a href="/create" class="menu">
                <img src="../img/plus.png" alt="create">
                <span class="menu-text align-middle">Create task</span>
            </a>
        </div>
        <div class="col-9 right-part pt-3 px-5">
            <div class="description">Developed by Artem Shevchuk</div>
            <div class="name-chapter">Tasks</div>
            <div class="row">
                <% notes.forEach( note => {%>
                <div class="col-xxl-4">
                    <div class="task">
                        <div class="task-head">
                            <span><%= note.note_name %></span>
                            <div>
                                <form action="/update" method="post" style="display: inline">
                                    <input type="text" name="id" value="<%= note._id %>" hidden>
                                    <button class="update-note-btn" type="submit">
                                        <img src="../img/pencil.png" alt="edit">
                                    </button>
                                </form>
                                <form action="/delete" method="post" style="display: inline">
                                    <input type="text"  name="id" value="<%= note._id %>" hidden>
                                    <button class="delete-note-btn" type="submit">
                                        <img src="../img/bin.png" alt="delete">
                                    </button>
                                </form>
                            </div>
                            </div>
                        <div class="task-body">
                            <ul>
                                <% note.sub_notes.forEach(sub_note => { %>
                                <li><%= sub_note %></li>
                                <%})%>
                            </ul>
                        </div>
                    </div>
                </div>
                <%})%>
            </div>
        </div>
    </div>
</body>
</html>